<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\Sales\InvoiceBundle\Entity\InvoiceItem" table="si_invoice_items">
        <unique-constraints>
            <unique-constraint columns="idInvoices,idItems"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="quantity" type="float" column="quantity" nullable="false"/>
        <field name="note" type="text" column="note" nullable="true"/>

        <many-to-one field="invoice" target-entity="Sulu\Bundle\Sales\InvoiceBundle\Entity\Invoice">
            <join-columns>
                <join-column name="idInvoices" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="item" target-entity="Sulu\Bundle\Sales\CoreBundle\Entity\Item">
            <join-columns>
                <join-column name="idItems" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>

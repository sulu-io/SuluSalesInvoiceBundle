<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\Sales\InvoiceBundle\Entity\Invoice" table="si_invoices" repository-class="Sulu\Bundle\Sales\InvoiceBundle\Entity\InvoiceRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="number" type="string" column="number" length="255" nullable="true"/>
        <field name="invoiceNumber" type="string" column="shippingNumber" nullable="true"/>

        <field name="customerName" type="string" column="customerName" length="255" nullable="true"/>
        <field name="termsOfDeliveryContent" type="string" column="termsOfDeliveryContent" length="255" nullable="true"/>

        <field name="taxfree" type="boolean" column="taxfree" nullable="true"></field>
        <field name="currency" type="string" column="currency" length="255" nullable="true"/>

        <field name="note" type="text" column="note" nullable="true"/>

        <field name="created" type="datetime" column="created"></field>
        <field name="changed" type="datetime" column="changed"></field>

        <one-to-one field="invoiceAddress" target-entity="Sulu\Bundle\Sales\OrderBundle\Entity\OrderAddress">
            <join-columns>
                <join-column name="idOrderAddressesInvoice"/>
            </join-columns>
        </one-to-one>

        <one-to-many field="invoiceItems" target-entity="Sulu\Bundle\Sales\InvoiceBundle\Entity\InvoiceItem" mapped-by="invoice"/>

        <many-to-one field="status" target-entity="Sulu\Bundle\Sales\InvoiceBundle\Entity\InvoiceStatus" inversed-by="invoice">
            <join-columns>
                <join-column name="idInvoiceStatus" referenced-column-name="id" nullable="false"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="termsOfPayment" target-entity="Sulu\Bundle\ContactBundle\Entity\TermsOfPayment">
            <join-columns>
                <join-column name="idTermsOfPayment"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="order" target-entity="Sulu\Bundle\Sales\OrderBundle\Entity\Order">
            <join-columns>
                <join-column name="idOrders" referenced-column-name="id" on-delete="SET NULL"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="changer" target-entity="Sulu\Component\Security\UserInterface">
            <join-columns>
                <join-column name="idUsersChanger" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="creator" target-entity="Sulu\Component\Security\UserInterface">
            <join-columns>
                <join-column name="idUsersCreator" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sulu_sales_invoice.admin.class">Sulu\Bundle\Sales\InvoiceBundle\Admin\SuluSalesInvoiceAdmin</parameter>
        <parameter key="sulu_sales_invoice.admin.content_navigation.class">Sulu\Bundle\Sales\InvoiceBundle\Admin\SuluSalesInvoiceContentNavigation</parameter>
        <parameter key="sulu_sales_invoice.admin.order_content_navigation.class">Sulu\Bundle\Sales\InvoiceBundle\Admin\OrderContentNavigationExtension</parameter>
        <parameter key="sulu_sales_invoice.invoice_repository.class">Sulu\Bundle\Sales\InvoiceBundle\Entity\InvoiceRepository</parameter>
        <parameter key="sulu_sales_invoice.invoice_manager.class">Sulu\Bundle\Sales\InvoiceBundle\Invoice\InvoiceManager</parameter>
        <parameter key="sulu_sales_invoice.invoice_listener.class">Sulu\Bundle\Sales\InvoiceBundle\EventListener\InvoiceListener</parameter>
    </parameters>
    <services>
        <service id="sulu_sales_invoice.admin" class="%sulu_sales_invoice.admin.class%">
            <tag name="sulu.admin" />
            <argument>%sulu_admin.name%</argument>
        </service>
        <service id="sulu_sales_invoice.admin.content_navigation" class="%sulu_sales_invoice.admin.content_navigation.class%">
        </service>
        <service id="sulu_sales_invoice.invoice_repository" class="%sulu_sales_invoice.invoice_repository.class%"
                 factory-method="getRepository" factory-service="doctrine.orm.entity_manager">
            <argument>SuluSalesInvoiceBundle:Invoice</argument>
        </service>

        <service id="sulu_sales_invoice.admin.order_content_navigation" class="%sulu_sales_invoice.admin.order_content_navigation.class%">
            <tag name="sulu.sales_order.content_navigation"/>
        </service>

        <service id="sulu_sales_invoice.invoice_manager" class="%sulu_sales_invoice.invoice_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sulu_security.user_repository" />
            <argument type="service" id="sulu_sales_core.item_manager" />
            <argument type="service" id="sulu_core.rest_helper" strict="false"/>
        </service>
        <service id="sulu_sales_invoice.invoice_listener" class="%sulu_sales_invoice.invoice_listener.class%">
            <tag name="doctrine.event_listener" event="postPersist" method="postPersist"/>
        </service>
    </services>
</container>
